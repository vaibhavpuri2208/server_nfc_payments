<%= form_for(@creditcard, :html => { :class => "form-5 clearfix" }) do |f| %>
  <p>
    <%= f.text_field :card_holder_name, placeholder: "Card Holder Name" %>
    <%= f.text_field :card_number, placeholder: "Card Number" %>
 
    <%= f.text_field :expiration_month, :size => 2, placeholder: "Expitation Month" %>
    <%= f.text_field :expiration_year, :size => 4, placeholder: "Expitation Year" %>

    <%= f.text_field :cvv, :size => 3, placeholder: "CVV" %>

    <%= f.text_field :billing_address, :size =>"22x8", placeholder: "Billing Address" %>
  </p>

  <%= button_tag(:type => "submit", class: "big_submit") do %>
    <i class="icon-arrow-right"></i>
    <span>Credit Card Info</span>
  <% end %>
<% end %>
