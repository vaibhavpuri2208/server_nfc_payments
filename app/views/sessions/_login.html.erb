<%= form_tag('/sessions', :method=>:post, :class=>"form-5 clearfix") do %>
  <p>
    <%= text_field_tag :email,nil, placeholder: "Email" %>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
  </p>
  <%= button_tag(:type => "submit") do %>
    <i class="icon-arrow-right"></i>
    <span>Login</span>
  <% end %>
<%end%>